        <Slider x:Name="red" HorizontalAlignment="Left" Margin="552,203,0,0" VerticalAlignment="Top" Width="123" Maximum="255" SmallChange="20" Background="Red" ValueChanged="changeColor"/>
        <Slider x:Name="green" HorizontalAlignment="Left" Margin="552,226,0,0" VerticalAlignment="Top" Width="123" Maximum="255" SmallChange="20" Background="#FF28C553" ValueChanged="changeColor"/>
        <Slider x:Name="blue" HorizontalAlignment="Left" Margin="552,249,0,0" VerticalAlignment="Top" Width="123" Maximum="255" SmallChange="20" Background="#FF0547F5" ValueChanged="changeColor"/>
        <Label x:Name="Dicke" Content="Dicke" HorizontalAlignment="Left" Margin="550,62,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.733,-0.167" Width="90"/>

    </Grid>
</Window>
