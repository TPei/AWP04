<Window x:Class="UE04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="711.391">
    <Grid x:Name="label1" Background="#FFD8D8D8">
        <InkCanvas x:Name="myInkCanvas" HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="517" Background="White" />
        <Label x:Name="label2" Content="Stift" HorizontalAlignment="Left" Margin="593,21,0,0" VerticalAlignment="Top" Background="#FFFFFBFB"/>
        <Button x:Name="undo" Content="zurück" HorizontalAlignment="Left" Margin="552,130,0,0" VerticalAlignment="Top" Width="51"  Click="undoButton"/>
        <Button x:Name="vor" Content="vor" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Margin="627,130,0,0" Click="redoButton"/>
